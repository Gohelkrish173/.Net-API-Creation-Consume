@model Consume_DemoAPI_FrontEnd.Models.StateModel;

<div class="card">
    <div class="card-body">
        <h5 class="card-title">State Form</h5>

        <!-- Multi Columns Form -->
        <form method="post" asp-controller="State" asp-action="StateSave" class="row g-3">
            <div class="col-md-12">
                <label asp-for="StateName" for="inputEmail5" class="form-label">StateName</label>
                <input asp-for="StateName" type="text" placeholder="Enter StateName" class="form-control" id="inputEmail5">
                <span class="text-danger" asp-validation-for="StateName"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="StateCode" for="inputCity" class="form-label">StateCode</label>
                <input asp-for="StateCode" placeholder="Enter StateCode" type="text" class="form-control" id="inputCity">
                <span class="text-danger" asp-validation-for="StateCode"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="CountryID" for="inputState" class="form-label">Country ID</label>
                <select asp-for="CountryID" id="CountryID" class="form-select" asp-items="@(new SelectList(ViewBag.CountryList,"CountryID","CountryName"))">
                    <option value="">Chose Country ID</option>
                </select>
                <span class="text-danger" asp-validation-for="CountryID"></span>
            </div>

            <div class="col-12">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gridCheck">
                    <label class="form-check-label" for="gridCheck">
                        Check me out
                    </label>
                </div>
            </div>

            <div class="text-center pb-2">
                <input type="hidden" asp-for="StateID" value="@Model.StateID" />
                <button type="submit" class="btn btn-primary">Submit</button>
                @* <button type="reset" class="btn btn-secondary">Reset</button> *@
            </div>
        </form><!-- End Multi Columns Form -->
        <div class="text-center">
            <form method="post" asp-action="cancelbtn" asp-controller="State">
                <button type="submit" class="btn btn-warning">Cancel</button>
            </form>
        </div>
    </div>
</div>

